{
  "name": "@skyscanner/backpack-foundations",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": "^12.13.0",
    "npm": "^6.12.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Skyscanner/backpack-foundations.git"
  },
  "author": "Backpack Design System <backpack@skyscanner.net>",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --no-ci",
    "build": "npm run build:tokens && npm run build:svgs",
    "build:svgs": "lerna run svgs --scope @skyscanner/bpk-svgs",
    "build:tokens": "lerna run tokens",
    "clean:lerna": "lerna clean --yes",
    "flow": "flow --max-warnings 0",
    "flow-typed": "flow-typed",
    "jest": "TZ=Etc/UTC jest --coverage",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "eslint . --ext js,jsx",
    "lint:js:fix": "eslint . --ext js,jsx --fix",
    "lint:scss": "stylelint 'packages/**/*.scss' --syntax scss",
    "lint:scss:fix": "stylelint 'packages/**/*.scss' --syntax scss --fix",
    "postinstall": "npm run bootstrap",
    "preinstall": "npx ensure-node-env",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,jsx}\"",
    "publish": "lerna bootstrap && npm run build && npm test && lerna publish",
    "test": "npm run lint && npm run jest && npm run flow"
  },
  "jest": {
    "coverageReporters": [
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "testRegex": "packages/.*-test\\.js$",
    "transformIgnorePatterns": [
      "node_modules/(?!bpk)"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-flow": "^7.12.1",
    "@babel/preset-react": "^7.12.7",
    "@babel/register": "^7.12.1",
    "del": "^5.0.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "flow-bin": "^0.132.0",
    "flow-typed": "^2.5.1",
    "gulp": "^4.0.2",
    "gulp-chmod": "^3.0.0",
    "gulp-clone": "^2.0.1",
    "gulp-concat": "^2.6.1",
    "gulp-iconfont": "^9.2.0",
    "gulp-jsonlint": "^1.2.2",
    "gulp-rename": "^2.0.0",
    "gulp-svgmin": "^2.2.0",
    "gulp-theo": "^2.0.0",
    "husky": "^4.0.2",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "lint-staged": "^10.5.3",
    "lodash": "^4.17.20",
    "merge-stream": "^2.0.0",
    "merge2": "^1.2.3",
    "react-svg-loader": "^3.0.1",
    "stylelint-config-skyscanner": "^3.0.4",
    "theo": "^8.1.3",
    "through2": "^4.0.2",
    "tinycolor2": "^1.4.1"
  }
}
