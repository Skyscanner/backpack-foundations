{
  "parser": "@babel/eslint-parser",
  "extends": [
    "@skyscanner/eslint-config-skyscanner",
    "plugin:ft-flow/recommended"
  ],
  "plugins": [
    "ft-flow",
    "eslint-plugin-prettier"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".json"
        ]
      }
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "import/no-extraneous-dependencies": "off"
  }
}
