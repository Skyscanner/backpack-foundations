{
  "extends": [
    "@skyscanner/eslint-config-skyscanner"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".json"
        ]
      }
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "import/no-extraneous-dependencies": "off"
  },
  "overrides": [
    {
      "files": ["*.json"],
      "plugins": ["json"],
      "rules": {
        "json/*": "error"
      }
    }
  ]
}
